{
	"name": "workrecapai",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"clean-install": "rm -rf node_modules && cd apps/server && rm -rf node_modules && cd ../web && rm -rf node_modules && bun install",
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "bun --filter '*' dev",
		"dev:web": "bun run dev --filter=web",
		"dev:server": "bun run dev --filter=server",
		"db:push": "bun run db:push --filter=server",
		"db:studio": "bun run db:studio --filter=server",
		"db:generate": "bun run db:generate --filter=server",
		"db:migrate": "bun run db:migrate --filter=server"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.2.22"
}
